  <body>
    <!-- navbar  -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark final-nav">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="/logo/Apprenant-Logo-t.png"
            alt=""
            width="130"
            height="40"
            class="d-inline-block align-text-top ps-3"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item" style="margin-right: 200px;">
              <div class="justify-content-center">
                <form  action="/search" method="post" class="d-flex my-lg-0 my-lg-0 py-1">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Search"
                    aria-label="Search"
                    name="searchTerm"
                    style="width: 35vw"
                  />

                  <button class="btn btn-outline-light ms-2">
                    Search
                  </button>
                </form>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <% if(logged){ %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item me-3">
              <a class="nav-link" href="/signup">Signup</a>
            </li>
            <li class="nav-item dropdown profile-dropdown nav-custom">
              <a
                class="nav-link dropdown-toggle nav-dropdown-custom d-color"
                href="#"
                id="navbarDarkDropdownMenuLink"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
              <i class="far fa-user nav-dropdown-custom"></i>
                
              </a>
              <ul
                class="dropdown-menu dropdown-left-manual"  role="menu"
                aria-labelledby="navbarDarkDropdownMenuLink"
              >
                <li><span class="dropdown-item">Night Mode
                  <div class="switch-main" >
                  <label class="switch" >
                    <input type="checkbox" id="icon">`
                    <span class="slider round"></span>
                  </label>
                </div>
                </span>
                </li>
                <li><a class="dropdown-item" href="/contactUs">Help Center</a></li>
                <li>
                  <a class="dropdown-item" href="/login">Log In/Sign Up</a>
                </li>
              </ul>
            </li>
            <!-- <img src="logo/moon.png" alt="icon" id="icon"> -->
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- navbar end  -->

    <div class="container" style="max-width: 1200px;">
      <div class="row">
        <div class="col-md-12 mt-4">
          <h5 class="content-heading mb-3">Communities</h5>
          <div class="owl-carousel owl-theme">
            <% community = community.reverse() %>
            <% community.forEach(function(community) { %>
              <a href="/community/<%= community._id %>">
                <div class="item">
                  <div class="img-gradient">
                      <h3 class="community-abt ms-2"><%= community.name %></h3>
                      <p class="community-des ms-2"><%= community.about %></p>
                      <img class="carousel-img" src="/uploads/<%=community.image%>" alt="community-image" />          
                  </div>
                </div>
              </a>
            <% }) %>
          </div>
        </div>

        <!-- Carousel End -->

        <!-- Post -->

        <div class="row mt-5">
          <div class="col-md-8">
            <h5 class="content-heading mb-4">Popular posts</h5>
            
            <% posts = posts.reverse(); %>
            <% posts.forEach(function(post) { %>
              <div class="panel blog-container mb-5 post-border">
                <div class="panel-body p-4">
              
                <h3><%= post.postTitle %></h3>
                <small class="text-muted"
                  >By
                  <a class="user-w-posted" href="#"
                    ><strong> <%= post.postBy %> </strong></a
                  >
                  | Post on <%= post.postDate %></small
                >
                <p>
                  <%= post.postContent.substring(0, 250) + " ... "%><a
                    href="/posts/<%=post._id%>"
                    >Read more</a
                  >
                </p>
                <img src="/uploads/<%=post.postFile%>" alt="post-file" class="card-img">
              
            </div>
          </div>
            <% }); %>
          </div>
          <!-- LIST GROUP -->
          <div class="col-md-4">
              <div class="trending-post">
                  <h5 class="content-heading mb-4">Trending today</h5>
              <ul class="list-group">
                  <li class="list-group-item trending-list mb-1">
                      <div class="d-flex position-relative">
                          <img src="/images/img14.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>Best $10 accessories for Apple's Airpods</p>
                            
                          </div>
                        </div>
                  </li>
                  <li class="list-group-item trending-list my-1">
                      <div class="d-flex position-relative">
                          <img src="/images/img15.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>How to Become a Web Developer in 2021</p>
                            
                          </div>
                        </div>
                  </li>
                  <li class="list-group-item trending-list my-1">
                      <div class="d-flex position-relative">
                          <img src="/images/img16.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>Is target Display Mode not supported by new iMacs</p>
                            
                          </div>
                        </div>
                  </li>
                  <li class="list-group-item trending-list my-1">
                      <div class="d-flex position-relative">
                          <img src="/images/img17.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>Afghanistan: Where will refugees go after Taliban takeover?</p>
                            
                          </div>
                        </div>
                  </li>
                  <li class="list-group-item trending-list my-1">
                      <div class="d-flex position-relative">
                          <img src="/images/img18.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>Is it safe for my child to get a COVID-19 vaccine?</p>
                            
                          </div>
                        </div>
                  </li>
                  <li class="list-group-item trending-list my-1">
                      <div class="d-flex position-relative">
                          <img src="/images/books.jpg" class="flex-shrink-0 me-3" alt="" height="60px" width="60px">
                          <div>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit?</p>
                            
                          </div>
                        </div>
                  </li>
              </ul>
          </div>
      </div>
      
    </div>
  
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
